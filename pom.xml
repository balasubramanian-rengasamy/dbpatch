<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jsoftware</groupId>
	<artifactId>dbpatch</artifactId>
	<packaging>maven-plugin</packaging>
	<version>3.0-SNAPSHOT</version>
	<name>Database patch Maven Mojo</name>
	<url>http://jsoftware.org/maven-dbpatch-plugin</url>
	<description>Manage your database patches with maven.</description>
	<inceptionYear>2011</inceptionYear>

    <prerequisites>
        <maven>3.0</maven>
    </prerequisites>

	<parent>
	    <groupId>org.jsoftware</groupId>
	    <artifactId>jsoftware</artifactId>
	    <version>1.6</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<inherited/>
				<configuration>
					<archive>
						<manifestEntries>
							<Author-Name>Marek Szalik</Author-Name>
							<Author-Email>marek.szalik@jsoftware.org</Author-Email>
							<Homepage>http://jsoftware.org/maven-dbpatch-plugin</Homepage>
							<Version>${project.version}</Version>
							<Build-Date>${maven.build.timestamp}</Build-Date> <!-- see property maven.build.timestamp.format -->
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<scm>
		<url>svn://jsoftware.org/grucha/dbpatch-maven-plugin/trunk</url>
		<connection>scm:svn:svn://jsoftware.org/grucha/dbpatch-maven-plugin/trunk</connection>
		<developerConnection>scm:svn:svn://jsoftware.org/grucha/dbpatch-maven-plugin/trunk</developerConnection>
	</scm>

    <repositories>
        <repository>
            <id>jsoftware.org</id>
            <name>JSoftware.org</name>
            <url>http://maven.jsoftware.org</url>
        </repository>
    </repositories>

	<properties>
		<maven.build.timestamp.format>yyyy-MM-dd</maven.build.timestamp.format>
	</properties>
</project>
